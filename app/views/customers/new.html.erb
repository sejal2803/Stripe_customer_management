<div class="container">
  <h1 class="mb-4">New Customer</h1>

  <%= form_with url: customers_path, method: :post, class: "mb-4" do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <%= form.submit "Create Customer", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", customers_path, class: "btn btn-secondary" %>
</div>
