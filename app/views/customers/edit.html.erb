<h1 class="mb-4">Edit Customer</h1>

<%= form_with url: customer_path(@customer.id), method: :put, class: "mb-4" do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "font-weight-bold" %>
    <%= form.text_field :email, value: @customer.email, class: "form-control" %>
  </div>

  <%= form.submit "Save Changes", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", customers_path, class: "btn btn-secondary" %>
