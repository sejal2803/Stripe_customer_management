<div class="container">
  <h1 class="my-5">Customer</h1>

  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text"><strong>Email:</strong> <%= @customer.email %></p>
      <p class="card-text"><strong>ID:</strong> <%= @customer.id %></p>

      <div class="btn-group">
        <%= link_to "Edit", edit_customer_path(@customer.id), class: "btn btn-primary mr-2" %>
        <%= link_to "Back", customers_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
